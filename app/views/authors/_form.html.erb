<%= simple_form_for @author do |f| %>

  <%= f.error_notification %>
  
  <%= f.input :first_name, placeholder: "Your First Name" %>
  <%= f.input :last_name, placeholder: "Your Last Name" %>
  <%= f.input :username, placeholder: "Pick a Username" %>
  <%= f.input :bio, placeholder: "Tell us about yourself" %>
  <%= f.input :email, placeholder: "email@example.com" %>
  <%= f.input :twitter, placeholder: "@twitterhandle" %>
  <%= f.input :password, placeholder: "Password" %>
  <%= f.input :password_confirmation, placeholder: "Confirm Password" %>
  <%= f.button :submit %>

<% end %>